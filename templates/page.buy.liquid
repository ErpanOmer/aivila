        const pcElements = document.querySelectorAll('.PC');
        const mobElements = document.querySelectorAll('.MOB');
        pcElements.forEach(el => {
            el.style.display = isMobile ? 'none' : '';
        });
        mobElements.forEach(el => {
            el.style.display = isMobile ? '' : 'none';
        });
        console.log('是否是移动端：', isMobile);
    }

    // 初始执行一次
    handleViewportClass();
    // 监听窗口大小变化
    window.addEventListener('resize', handleViewportClass);

</script>